---
import Start from '@/components/Star.astro'
---

<div class='max-w-2xl mx-auto'>
  <div class='shadow-md rounded-lg max-w-sm bg-gray-800 border-gray-700'>
    <a href='#'>
      <img
        class='pb-5 rounded-lg overflow-hidden'
        src='https://i.ibb.co/KqdgGY4/cosmetic-packaging-mockup-1150-40280.webp'
        alt='product image'
      />
    </a>
    <div class='px-5 pb-5'>
      <a href='#'>
        <h3 class='font-semibold text-xl tracking-tight text-white'>
          Apple Watch Series 7 GPS, Aluminium Case, Starlight Sport
        </h3>
      </a>
      <div class='flex items-center mt-2.5 mb-5'>
        <div class='flex flex-1'>
          <Start />
          <Start />
          <Start />
          <Start />
        </div>

        <span
          class='text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded bg-blue-200 ml-3'
          >5.0</span
        >
      </div>
    </div>
  </div>
</div>
